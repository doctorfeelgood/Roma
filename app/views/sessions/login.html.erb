<div id='login_container'>
	<div id='login_form'>
		<% form_tag 'authenticate' do -%>
		<table>
			<tr>
				<td align='right'><%= label_tag 'Usuario' %></td>
				<td><%= text_field_tag 'username', @login %></td>
			</tr>
			<tr>
				<td align='right'><%= label_tag 'Password' %></td>
				<td><%= password_field_tag 'password', nil %></td>
			</tr>
			<tr>
				<td colspan='2' align='right'><%= submit_tag 'Iniciar sesi&oacute;n' %></td>
			</tr>
		</table>
		<% end -%>
	</div>
</div>