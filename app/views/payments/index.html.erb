<div class='top_bar'><span class="list_title"><%=l Date.today, :format=>:long %></span></div>
<div class="table_container"  >
	<table class='list_table' >
		<tr>
			<th class='sortable'>Usuario</th>
			<th class='sortable'>Mes</th>
			<th class='sortable'>Tarifa</th>
			<th class='sortable'>Fecha</th>
			<th colspan='3'>Acciones</th>
	  	</tr>
<% @payments.each do |payment| %>
  <tr class="<%= cycle("even", "odd") %>">
  	<td><%=payment.membership.member.name%> <%=payment.membership.member.last_name%></td>
  	<td><%=payment.paid_month%></td>
  	<td><%=debug(payment.rate_id)%></td>
  	<td><%=payment.created_at.strftime("%m/%d/%y")%></td>
    <td><%= link_to 'Show', payment %></td>
    <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
    <td><%= link_to 'Destroy', payment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
	<div class='list_footer'>
		<%= link_to 'New payment', new_payment_path %>
	</div><!--termina list footer-->
</div><!--termina list container -->