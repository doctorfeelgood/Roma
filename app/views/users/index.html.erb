<div class='top_bar member_table_width'><span class="list_title">Listado de usuarios</span></div>
<div class="table_container member_table_width">
	<table class='list_table'>
		<tr>
			<th class='sortable'>Username</th>
			<th class='sortable'>Nombre</th>
			<th colspan='3'>Acciones</th>
	  	</tr>

	<% @users.each do |user| %>
	  	<tr class="<%= cycle("even", "odd") %>">
			<td><%=user.username%></td>
			<td><%=user.name%> <%=user.last_name%></td>

			<td><%= link_to 'Mostrar', user, :class=>'link to_show' %></td>
			<td><%= link_to 'Editar', edit_user_path(user), :class=>'link to_edit' %></td>
	    	<td><%= link_to 'Eliminar', user, :class=>'link to_destroy', :confirm => 'EstÃ¡ seguro?', :method => :delete  %></td>
	  	</tr>
	<% end %>
	</table>
	<div class='list_footer'>
		<%= link_to_remote 'Agregar', :url=>{:action=>'new'}, :html=>{:class=>'link_to_new'} %>
	</div><!--termina list footer-->
</div><!--termina list container -->	