<div class='top_bar member_table_width'><span class="list_title">Listado de miembros</span></div>
<div class="table_container member_table_width">
	<table class='list_table'>
		<tr>
			<th>Numero</th>
			<th>Nombre</th>
			<th colspan='3'>Acciones</th>
	  	</tr>

	<% @members.each do |member| %>
	  	<tr class="<%= cycle("even", "odd") %>">
			<td><%=member.member_number%></td>
			<td><%=member.name%> <%=member.last_name%></td>
	    	<td><%= link_to_remote 'Show', :url=>{:action=>'show_member', :id=>member.id} %></td>
	    	<td><%= link_to 'Edit', edit_member_path(member) %></td>
	    	<td><%= link_to 'Destroy', member, :confirm => 'Are you sure?', :method => :delete %></td>
	  	</tr>
	<% end %>
	</table>
	<div class='list_footer'>
		<%= link_to 'Agregar', new_member_path, :class=>'link_to_new' %>
	</div><!--termina list footer-->
</div><!--termina list container -->	

<div id="show_member" style='display:none;' class='on_top' >
</div>


