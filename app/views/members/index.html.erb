<div class='top_bar member_table_width'><span class="list_title">Listado de miembros</span></div>
<div class="table_container member_table_width">
	<table class='list_table'>
		<tr>
			<th class='sortable'>N&uacute;mero</th>
			<th class='sortable'>Nombre</th>
			<th colspan='3'>Acciones</th>
	  	</tr>

	<% @members.each do |member| %>
	  	<tr class="<%= cycle("even", "odd") %>">
			<td><%=member.member_number%></td>
			<td><%=member.name%> <%=member.last_name%></td>
	    	<td><%= link_to_remote 'Mostrar', :url=>{:action=>'show_member', :id=>member.id}, :html=>{:class=>'link to_show'} %></td>
			<td><%= link_to_remote 'Editar', :url=>{:action=>'edit', :id=>member}, :html=>{:class=>'link to_edit'} %></td>

	    	<td><%= link_to 'Eliminar', member, :class=>'link to_destroy', :confirm => 'EstÃ¡ seguro?', :method => :delete  %></td>
	  	</tr>
	<% end %>
	</table>
	<div class='list_footer'>
		<%= link_to_remote 'Agregar', :url=>{:action=>'new'}, :html=>{:class=>'link_to_new'} %>
	</div><!--termina list footer-->
</div><!--termina list container -->	

<div id="show_member" style='display:none;' class='on_top' >
</div>
<div id="new_member" style='display:none;' class='on_top' >
</div>
<div id="edit_member" style='display:none;' class='on_top' >
</div>

