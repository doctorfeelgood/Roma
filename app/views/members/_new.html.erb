<div id='popup'>
	<div id='popup_info'>
		<%=link_to_function(nil, nil, :class=>'close') do |page|	  
			page.visual_effect :fade, "new_member", :duration => 0.5
		  end %>
		

		<% form_for @member, :html => { :multipart => true } do |f| %>  
			<%= f.error_messages %>
			<%= render :partial => 'form', :locals => {:f => f} %>


		<div class='two_column'>
			<div class='left'>
				<a href=# class='left_button' ><img src='../images/cancelar.png'></a>
			</div>
			<div class='right'>
				<%= image_submit_tag 'guardar.png', :class => 'right_button' %>
			</div>
		</div>
		
		<div class='clear'></div>
		  <p>
		    <%# f.submit 'Create' %>
		  </p>
		<% end %>


	</div>
</div>